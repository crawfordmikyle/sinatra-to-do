<% if flash.has?(:message) %>
<div class="alert-info" roll="alert">
	<%=flash[:message] %>
</div>
<% end %>


<h3>Your To Do List:</h3>

<%@user_tasks.each do |task|%>
<div class="well">
<%=task.title%><br>
<%=task.content%><br>
<%=task.due_date%><br>
<a href="/tasks/<%=task.id%>">View Task</a>
<br><br>
</div>
<%end%>
