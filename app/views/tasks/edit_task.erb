
<% if flash.has?(:message) %>
<div class="alert-info" roll="alert">
	<%=flash[:message]%>
</div>
<% end %>
<div class="row">
<div class="col-md-6 col-md-offset-3">
<form method="post" action="/tasks/<%=@task.id%>/edit" id="new_task">
<div class="form-group">
	<input id="hidden" type="hidden" name="_method" value="patch">
	<label for="title">Title:</label>
	<input type="text" class="form-control" name="task[title]" value="<%=@task.title%>">
	<br>
	<label for="content">Content:</label>
	<textarea name="task[content]" class="form-control" form="new_task"><%=@task.content%></textarea>
	<br>
	<label for="due_date">Due Date:</label>
	<input type="date" class="form-control" name="task[due_date]" value="<%=@task.due_date%>">
	<br>
	<input type="submit" class="btn btn-primary" value="Edit Task">
</div>
</form>
</div>
</div>
